<!-- Content -->
<div id="content">
  <%= cl_erb "common/header" %>
  <%= cl_erb "common/stats" %>
  
  <div class="clear"></div>
  
  <div id="bio">
    <div id="bio-header">
      <p>Lobbying firm</p>
      <h1><%= @firm.name %></h1>
    </div>
    
    <div id="bio-primary">
      <div class="c2l">
        
        <div class="section">
          <h2>2010 billing</h2>
          <p><strong class="total-paid"><%= number_to_currency @firm.total_compensation %></strong></p>
        </div><!-- /.section -->
        
        <div class="section">
          <h2>Lobbyists</h2>
          <ul>
            <% @firm.lobbyists.each do |lobbyist| %>
            <li><a href="/lobbyists/<%= lobbyist.slug %>"><%= lobbyist.full_name %></a></li>
            <% end %>
          </ul>
        </div><!-- /.section -->
        
        <div class="section">
          <h2>Clients</h2>
          <ul>
            <% @firm.clients.each do |client| %>
            <li><a href="/clients/<%= client.slug %>"><%= client.name %></a></li>
            <% end %>
          </ul>
        </div><!-- /.section -->
        
      </div>
      
      <div class="c2r">
        
        <div class="section">
          <h2>Actions sought</h2>
          <dl>
            <dt>Industry concerns</dt>
            <dd><a href="agency.html">Office of the Mayor</a> (5)</dd>
            
            <dt>TIF</dt>
            <dd><a href="agency.html">Budget and management</a> (3)</dd>
            <dd><a href="agency.html">City Council</a> (2)</dd>
            
            <dt>Procurement</dt>
            <dd><a href="agency.html">Budget and management</a> (74)</dd>
            
            <dt>Tax Assistance</dt>
            <dd><a href="agency.html">Budget and management</a> (6)</dd>
            <dd><a href="agency.html">City Council</a> (12)</dd>
          </dl>
          <p class="mute">Current data does not allow us to learn <strong>how much each client paid to each lobbying firm or lobbyist.</strong> We expect that the city will add data to make this possible.</p>
        </div><!-- /.section -->
      </div>
      
      <div class="c2r">

        <div class="section">
          <h2>Agencies from whom this firm sought actions.</h2>
          <table>
            <thead>
              <tr>
                <th>Agency</th>
                <th title="Administrative actions">Admin.</th>
                <th title="Legislative actions">Leg.</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><a href="agency.html">Budget and management</a></td>
                <td>19</td>
                <td>18</td>
              </tr>
              <tr>
                <td><a href="agency.html">City Council</a></td>
                <td>28</td>
                <td>27</td>
              </tr>
              <tr>
                <td><a href="agency.html">Department of Police</a></td>
                <td>19</td>
                <td>19</td>
              </tr>
              <tr>
                <td><a href="agency.html">General Services</a></td>
                <td>26</td>
                <td>23</td>
              </tr>
              <tr>
                <td><a href="agency.html">Office of the Mayor</a></td>
                <td>28</td>
                <td>25</td>
              </tr>
              <tr>
                <td><a href="agency.html">Transportation</a></td>
                <td>28</td>
                <td>28</td>
              </tr>
              <tr>
                <td><a href="agency.html">Water Management</a></td>
                <td>24</td>
                <td>23</td>
              </tr>
            </tbody>
          </table>
          <p class="mute">Current data does not allow us to learn <strong>which clients requested what actions in front of which committees.</strong> We expect that the city will add data to make this possible.</p>
        </div><!-- /.section -->

      </div>
    </div>
    <div id="bio-secondary">
      <img alt="" src="../images/map.jpg" />
      <p><strong>5 miles</strong> from Chicago City Hall</p>
      <p>
        <br />Address not available
      </p>
    </div>
  </div>
  
  <div class="clear"></div>
  
  <%= cl_erb "common/footer" %>
</div>
<!-- /Content -->
